<div class="row">
  <div class="col-3">
    <div class="row">
      <img href="{{bands.band_pic_url}}">
    </div>

    <form ref='uploadForm' 
      id='uploadForm' 
      action='/api/upload/band/:' + {{bands.b_id}} 
      method='post' 
      encType="multipart/form-data">
        <input type="file" name="profileImg" />
        <input type='submit' value='Upload!' />
    </form>

    <div class="row">
      <p>Location: {{bands.b_locale}}</p>
    </div>
  </div>
  <div class="col-6">
    <div class="row">
      {{bands.band_name}}
    </div>
    <div class="row border border-black">
      {{bands.bio}}
    </div>
  </div>
  <div class="col-3">
    {{bands.soc_media}}
  </div>
</div>

