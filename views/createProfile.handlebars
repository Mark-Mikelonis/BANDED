
<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you a Band or a Fan?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="bandorfan">Are you a Band or Fan?</label>
            <select class="form-control" id="bandOrFan">
              <option value="fan">Fan</option>
              <option value="band">Band</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary" id="profSubmit">Submit Profile</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{#if #bandOrFan.value() === "fan"}}
  {{>fanCreate}}
{{else}}
  {{>bandCreate}}
